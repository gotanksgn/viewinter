<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_editor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alivc_common_theme_primary">

    <FrameLayout
        android:id="@+id/alivc_record_title_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alivc_common_height_tittle_54">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="预览"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/aliyun_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/alivc_common_margin_10"
            android:padding="@dimen/alivc_common_padding_5"
            android:src="@mipmap/aliyun_svideo_icon_back" />

        <TextView
            android:id="@+id/mTvRight"
            style="@style/NextBtnStyle"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/alivc_common_margin_20"
            android:layout_marginRight="@dimen/alivc_common_margin_16"
            android:text="完成" />

    </FrameLayout>


    <FrameLayout
        android:id="@+id/glsurface_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alivc_record_title_view">

        <SurfaceView
            android:id="@+id/play_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal" />


    </FrameLayout>

    <com.gotanks.uni_alisv.editor.view.thumblinebar.ThumbLineBar
        android:id="@+id/simplethumblinebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom" />


    <TextView
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/simplethumblinebar"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@mipmap/alivc_svideo_bg_record_storp"
        android:gravity="center"
        android:text="@string/alivc_editor_edit_play_pause"
        android:textColor="@color/alivc_common_font_white"
        android:textSize="@dimen/alivc_common_font_14" />


    <TextView
        android:id="@+id/tv_curr_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alivc_record_title_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:alpha="0.8"
        android:background="#999"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="00:00"
        android:textColor="@color/alivc_common_font_white"
        android:textSize="8sp" />


    <FrameLayout
        android:id="@+id/transcode_tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center" />

        <ProgressBar
            android:id="@+id/transcode_progress"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/alivc_common_margin_20"
            android:layout_marginRight="@dimen/alivc_common_margin_20"
            android:max="100"
            android:progress="0" />
    </FrameLayout>


</RelativeLayout>
