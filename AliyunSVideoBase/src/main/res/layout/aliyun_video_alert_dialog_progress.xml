<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/alivc_common_theme_primary">

    <ProgressBar
        android:id="@android:id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dip"
        android:layout_marginTop="12dip"
        android:layout_marginEnd="10dip"
        android:layout_marginBottom="1dip" />

    <TextView
        android:id="@+id/aliyun_progress_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/progress"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dip"
        android:layout_marginEnd="10dip"
        android:paddingBottom="12dip"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/aliyun_progress_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/progress"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dip"
        android:layout_marginEnd="10dip"
        android:paddingBottom="12dip"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/vTvCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aliyun_progress_number"
        android:layout_centerHorizontal="true"
        android:background="@color/alivc_common_theme_primary_darker"
        android:gravity="center"
        android:padding="@dimen/alivc_common_padding_10"
        android:text="取消"
        android:textColor="#FFFFFF"
        android:visibility="gone" />
</RelativeLayout>
