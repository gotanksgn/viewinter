<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.aliyun.demo.recorder.activity.AlivcRecorderActivity">

    <EditText
        android:id="@+id/aliyun_width"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:inputType="number"
        android:hint="@string/alivc_recorder_setting_width"/>
    <EditText
        android:id="@+id/aliyun_height"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alivc_common_height_tv_100"
        android:inputType="number"
        android:hint="@string/alivc_recorder_setting_height"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alivc_recorder_setting_open_skin_filter"
        android:onClick="openBeauty"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alivc_recorder_setting_open_face_detection"
        android:onClick="openFaceDetect"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alivc_recorder_setting_start"
        android:onClick="start"/>
</LinearLayout>
